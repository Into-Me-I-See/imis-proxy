{
  "version": 2,
  "routes": [
    {
      "src": "^/sw\\.js$",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8",
        "Service-Worker-Allowed": "/",
        "Cache-Control": "no-store",
        "X-Content-Type-Options": "nosniff"
      },
      "dest": "/public/sw.js"
    },
    { "src": "^/api/(public-key|subscribe|send)$", "dest": "/api/$1" },
    { "src": "^(?!/api/|/sw\\.js)(.*)$", "dest": "/api/proxy" }
  ]
}
